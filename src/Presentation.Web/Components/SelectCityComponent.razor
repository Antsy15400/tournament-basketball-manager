<MudSelect T="string" Label="City" AnchorOrigin="Origin.BottomCenter" @bind-Value="City">
    @foreach(var city in Cities)
    {
        <MudSelectItem Value="@(city)" />
    }
</MudSelect>

@code
{
    string _value = string.Empty;
    [Parameter]
    public string City
    {
        get => _value;
        set
        {
            if (_value == value) return;
            _value = value;
            CityChanged.InvokeAsync(value);
        }
    }

    [Parameter] public EventCallback<string> CityChanged { get; set; }

